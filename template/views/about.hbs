    <script src="assets/js/plugins/jquery.counterup.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.countNum').counterUp({
                delay: 20,
                time: 1500
            });
        })
    </script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>


</body>

</html>